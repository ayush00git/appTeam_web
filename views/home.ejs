          <!-- Extra space for scrolling -->
          <div class="scroll-spacer"></div>
        </div>
      </div>
    </div>
    <%- include("./partials/footer") %>
    <script>
      // Scroll Animation Observer
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const delay = entry.target.dataset.delay || 0;
            setTimeout(() => {
              entry.target.classList.add("fade-in-up");
            }, delay);
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      // Observe all domain cards
      document.addEventListener("DOMContentLoaded", () => {
        const animatedElements = document.querySelectorAll("[data-animate]");
        animatedElements.forEach((el) => observer.observe(el));

        // Add scroll reveal class to elements
        const scrollElements = document.querySelectorAll(".domain-card");
        scrollElements.forEach((el) => el.classList.add("scroll-reveal"));
      });

      // Smooth scroll behavior
      document.documentElement.style.scrollBehavior = "smooth";

      // Simple mouse parallax for hero devices
      const heroDevices = document.querySelector(".hero-devices");
      document.addEventListener("mousemove", (e) => {
        if (heroDevices) {
          const x = (e.clientX / window.innerWidth - 0.5) * 100;
          const y = (e.clientY / window.innerHeight - 0.5) * 100;
          heroDevices.style.transform = `translate(${x}px, ${y}px)`;
        }
      });
      document.addEventListener("mouseleave", () => {
        if (heroDevices) {
          heroDevices.style.transform = "";
        }
      });
      const sections = [
        {
          id: "hack-on-hills",
          title: "Conduct Hack on Hills",
          description:
            "North India's biggest student-run hackathon, powered by our robust event management and judging platform with real-time updates and seamless participant experience.",
          image:
            "/homepage/hoh.webp",
        },
        {
          id: "nimbus-app",
          title: "Nimbus App",
          description:
            "A comprehensive platform for NIT Hamirpur's annual tech fest, offering schedules, live updates, interactive maps, and streamlined event registration features.",
          image:
            "/homepage/nimbus.webp",
        },
        {
          id: "hillfair-app",
          title: "Hillfair App",
          description:
            "The official app for NIT Hamirpur's cultural fest, blending vibrant UI with seamless user experience to celebrate student creativity and cultural diversity through innovative features.",
          image:
            "/homepage/hillfair.webp",
        },
      ];

      let activeSection = 0;
      const currentImage = document.getElementById("currentImage");
      const sectionElements = document.querySelectorAll(".section");

      function handleScroll() {
    const scrollPosition = window.scrollY;
    const windowHeight = window.innerHeight;
    
    const sectionElements = document.querySelectorAll('.section');
    let newActiveSection = 0;
    
    sectionElements.forEach((section, index) => {
        const rect = section.getBoundingClientRect();
        
        // Change image as soon as section starts entering viewport
        if (rect.top <= windowHeight * 0.8) {
            newActiveSection = index;
        }
    });
    
    if (newActiveSection !== activeSection) {
        activeSection = newActiveSection;
        updateImageAndSections();
    }
}
        const scrollPosition = window.scrollY;
        const windowHeight = window.innerHeight;
        const middleOfScreen = scrollPosition + windowHeight / 2;

        // Header takes up first viewport
        const headerHeight = windowHeight;

        if (middleOfScreen < headerHeight) {
          activeSection = -1; // No section active in header
        } else {
          // Calculate which section's middle point is closest to screen middle
          const scrollAfterHeader = middleOfScreen - headerHeight;
          const sectionHeight = windowHeight * 0.8;

          // Find which section the middle of the screen is currently viewing
          const currentSectionIndex = Math.floor(
            scrollAfterHeader / sectionHeight
          );

          // Ensure we don't go beyond available sections
          const validSectionIndex = Math.max(
            0,
            Math.min(currentSectionIndex, sections.length - 1)
          );
          activeSection = validSectionIndex;
        }

        updateImageAndSections();
      

      function updateImageAndSections() {
    // Update image based on active section
    if (activeSection >= 0 && activeSection < sections.length) {
        const newImageSrc = sections[activeSection].image;
        if (currentImage.src !== newImageSrc) {
            currentImage.classList.add('changing');
            setTimeout(() => {
                currentImage.src = newImageSrc;
                currentImage.classList.remove('changing');
            }, 200);
        }
    }

    // Update section states
    sectionElements.forEach((section, index) => {
        if (index === activeSection) {
            section.classList.remove('inactive');
            section.classList.add('active');
        } else {
            section.classList.remove('active');
            section.classList.add('inactive');
        }
    });
}
        // Update image
        if (activeSection >= 0 && activeSection < sections.length) {
          currentImage.src = sections[activeSection].image;
        } else {
          currentImage.src = sections[0].image;
        }

        // Update section states
        sectionElements.forEach((section, index) => {
          if (index <= activeSection) {
            section.classList.remove("inactive");
            section.classList.add("active");
          } else {
            section.classList.remove("active");
            section.classList.add("inactive");
          }
        });
      

      // Add scroll event listener
      window.addEventListener("scroll", handleScroll);

      // Call once to set initial state
      handleScroll();
    </script>
  </body>
