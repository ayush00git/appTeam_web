<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us & Review</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #140b29;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* Decorative background elements */
        body::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 30% 20%, rgba(165, 148, 249, 0.1) 0%, transparent 50%),
                        radial-gradient(circle at 70% 80%, rgba(165, 148, 249, 0.05) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(30px, -30px) rotate(1deg); }
            66% { transform: translate(-20px, 20px) rotate(-1deg); }
        }

        .form-container {
            background: #a594f9;
            border-radius: 24px;
            padding: 48px;
            width: 100%;
            max-width: 480px;
            position: relative;
            z-index: 1;
        }

        .form-title {
            text-align: center;
            margin-bottom: 40px;
            font-size: 32px;
            font-weight: 700;
            color: #140b29;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }

        .form-group {
            margin-bottom: 28px;
        }

        label {
            display: block;
            margin-bottom: 12px;
            font-weight: 600;
            color: #140b29;
            font-size: 15px;
            letter-spacing: -0.01em;
        }

        input[type="email"],
        select,
        textarea {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid rgba(20, 11, 41, 0.3);
            border-radius: 16px;
            background: #1a0f35;
            color: #a594f9;
            font-size: 16px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        input[type="email"]:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #140b29;
            background: #140b29;
            transform: translateY(-2px);
        }

        textarea {
            resize: vertical;
            min-height: 120px;
            font-family: 'Inter', sans-serif;
        }

        .rating-container {
            position: relative;
        }

        select {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23140b29' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 16px center;
            background-repeat: no-repeat;
            background-size: 16px;
            padding-right: 50px;
        }

        .submit-btn {
            width: 100%;
            padding: 18px;
            background: #140b29;
            color: #a594f9;
            border: none;
            border-radius: 16px;
            font-size: 17px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 32px;
            font-family: 'Inter', sans-serif;
            letter-spacing: -0.01em;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .submit-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(165, 148, 249, 0.2), transparent);
            transition: left 0.5s;
        }

        .submit-btn:active {
            transform: translateY(1px);
        }

        .submit-btn:active::before {
            left: 100%;
        }

        /* Modern placeholder styling */
        ::placeholder {
            color: rgba(20, 11, 41, 0.6);
            font-weight: 400;
        }

        /* Custom styling for select options */
        option {
            background: white;
            color: #140b29;
            padding: 12px;
        }

        /* Rating stars visual indicator */
        .rating-display {
            display: flex;
            gap: 4px;
            margin-top: 8px;
            align-items: center;
        }

        .star {
            width: 20px;
            height: 20px;
            color: #140b29;
            opacity: 0.3;
            transition: opacity 0.2s ease;
        }

        .star.filled {
            opacity: 1;
        }

        /* Responsive design */
        @media (max-width: 480px) {
            .form-container {
                padding: 32px 24px;
                margin: 10px;
            }
            
            .form-title {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1 class="form-title">Contact & Review</h1>
        
        <form id="contactForm">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="your.email@gmail.com" required>
            </div>

            <div class="form-group">
                <label for="rating">Rate Your Experience</label>
                <div class="rating-container">
                    <select id="rating" name="rating" required>
                        <option value="">Choose your rating</option>
                        <option value="1">‚òÖ Poor</option>
                        <option value="2">‚òÖ‚òÖ Fair</option>
                        <option value="3">‚òÖ‚òÖ‚òÖ Good</option>
                        <option value="4">‚òÖ‚òÖ‚òÖ‚òÖ Very Good</option>
                        <option value="5">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ Excellent</option>
                    </select>
                    <div class="rating-display" id="ratingDisplay">
                        <span class="star">‚òÖ</span>
                        <span class="star">‚òÖ</span>
                        <span class="star">‚òÖ</span>
                        <span class="star">‚òÖ</span>
                        <span class="star">‚òÖ</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="comment">Your Thoughts</label>
                <textarea id="comment" name="comment" placeholder="Share your feedback, suggestions, or ask us anything..."></textarea>
            </div>

            <button type="submit" class="submit-btn">Send Message</button>
        </form>
    </div>

    <script>
        const ratingSelect = document.getElementById('rating');
        const ratingDisplay = document.getElementById('ratingDisplay');
        const stars = ratingDisplay.querySelectorAll('.star');

        ratingSelect.addEventListener('change', function() {
            const rating = parseInt(this.value);
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('filled');
                } else {
                    star.classList.remove('filled');
                }
            });
        });

        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const rating = document.getElementById('rating').value;
            const comment = document.getElementById('comment').value;
            
            if (email && rating) {
                // Create a modern success message
                const successMsg = `‚ú® Thank you for your feedback!\n\nüìß ${email}\n‚≠ê ${rating}/5 stars\nüí≠ ${comment || 'No additional comments'}`;
                alert(successMsg);
                
                // Reset form and stars
                this.reset();
                stars.forEach(star => star.classList.remove('filled'));
            } else {
                alert('‚ö†Ô∏è Please fill in your email and rating to continue.');
            }
        });
    </script>
</body>
</html>