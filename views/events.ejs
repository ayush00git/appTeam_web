        padding: 0;
        box-sizing: border-box;
      }

      body {
        background-color: #140b29;
        color: rgba(255, 255, 255, 0.9);
        overflow-x: hidden;
      }

      #app {
        min-height: 100vh;
        width: 100%;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
      }

      .main-title {
        font-size: 4rem;
        font-family: 'ubuntu', sans-serif;
        font-weight: bold;
        text-align: center;
        margin: 2rem 0 4rem 0;
        background:#ca82ff ;
        background-size: 300% 300%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradientShift 6s ease infinite;
        letter-spacing: 0.1em;
        text-transform: uppercase;
      }

      @keyframes gradientShift {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .event-section {
        text-align: center;
        margin-bottom: 4rem;
      }

      .event-title {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .event-description {
        font-size: clamp(1rem, 2.5vw, 1.2rem);
        line-height: 1.8;
        max-width: 800px;
        margin: 0 auto 3rem auto;
        color: rgba(255, 255, 255, 0.8);
        text-align: justify;
      }

      .images-container {
        position: relative;
        min-height: 120vh;
        margin-top: 2rem;
      }

      .image-item {
        position: absolute;
        width: 300px;
        height: 200px;
        border-radius: 15px;
        margin: 10rem;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        opacity: 0;
        transform: translateY(50px) scale(0.9);
      }

      .image-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
      }

      .image-item:hover img {
        transform: scale(1.1);
      }

      .image-item:hover {
        transform: translateY(-10px) scale(1.05);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
      }

      .image-item.left {
        left: 10%;
      }

      .image-item.right {
        right: 10%;
      }

      .image-item:nth-child(1) {
        top: 10px;
      }

      .image-item:nth-child(2) {
        top: 100px;
      }

      .image-item:nth-child(3) {
        top: 200px;
      }

      .image-item:nth-child(4) {
        top: 300px;
      }

      .image-item:nth-child(5) {
        top: 400px;
      }

      .image-item:nth-child(6) {
        top: 500px;
      }

      .fade-in {
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);  
      }

      .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .image-item.visible {
        opacity: 1;
        transform: translateY(0) scale(1);
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .container {
          padding: 1rem;
        }

        .main-title {
          margin: 1rem 0 2rem 0;
        }

        .event-section {
          margin-bottom: 2rem;
        }

        .event-description {
          text-align: left;
          margin-bottom: 2rem;
        }

        .image-item {
          width: 250px;
          height: 167px;
          position: relative;
          margin: 20px auto;
          left: 0 !important;
          right: 0 !important;
          display: block;
        }

        .images-container {
          min-height: auto;
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 20px;
        }

        .image-item:nth-child(n) {
          top: auto !important;
        }
      }

      @media (max-width: 480px) {
        .image-item {
          width: 200px;
          height: 133px;
        }
      }
    </style>
